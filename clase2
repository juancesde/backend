//Variables 

//entero
int edad = 23;
//cadena
string nombre = "juan";
//real
double trm = 4300.20;
//logico  true o false
bool esFrio = true;

//Metodos de consola
Console.WriteLine("hola mundo"); // escribe en hola mundo en la consola
Console.ReadLine(); // lee dato ingresado en la consola


//declaramos variable cant de tipo int
int cant;
//declaramos variable cantidadStr de tipo string
string cantidadStr;
//leemos en consola la cantidad ingresada por el usuario
cantidadStr = Console.ReadLine();
//Conversion explicita de string a entero
cant = Convert.ToInt32(cantidadStr);
//Imprimir
Console.WriteLine(cant);



//Conversion implicita entre int a string
string mensaje;
int edad;
string resultado;
mensaje = "La edad de fulanito es: ";
Console.WriteLine("Ingrese la edad");
edad = Convert.ToInt32(Console.ReadLine());
resultado = mensaje + edad;
Console.WriteLine(resultado);



//conversion explicita entre double a entero
int edad;
double TRM = 4300.20;
//conversion explicita de real a entero.
edad = Convert.ToInt32(TRM);
Console.WriteLine(edad);
