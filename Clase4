//ejemplo vueltas a la cancha
int metaVueltas;
Console.WriteLine("Ingrese un numero de vueltas a dar:");
metaVueltas = Convert.ToInt32(Console.ReadLine());

int contador = 1;
while (contador <= metaVueltas )
{
    Console.WriteLine("vuelta numero: "+ contador);
    contador++;
}
Console.WriteLine("Alcanzaste tu meta!!"+ metaVueltas + " vueltas");
